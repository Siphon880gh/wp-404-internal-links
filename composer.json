{
    "name": "xny/404-broken-internal-links",
    "description": "WordPress plugin for detecting and managing broken internal links",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "XnY (Weng Fei Fung)",
            "email": "support@wengindustries.com",
            "homepage": "https://wengindustries.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "brain/monkey": "^2.6",
        "mockery/mockery": "^1.4",
        "squizlabs/php_codesniffer": "^3.6",
        "phpcompatibility/php-compatibility": "^9.3",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7"
    },
    "autoload-dev": {
        "psr-4": {
            "XnY\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage-html --coverage-text --coverage-clover coverage.xml",
        "test:unit": "phpunit tests/unit",
        "test:integration": "phpunit tests/integration",
        "cs:check": "phpcs",
        "cs:fix": "phpcbf",
        "analyze": "phpstan analyse",
        "ci": [
            "@cs:check",
            "@test:coverage"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
